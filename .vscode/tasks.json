{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet build xFunc.sln -c ${input:configurationType}",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "dotnet test xFunc.sln -c ${input:configurationType}",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Code Coverage",
            "type": "shell",
            "group": "test",
            "command": "dotnet test -c ${input:configurationType} -p:CollectCoverage=true -p:CoverletOutputFormat=cobertura -p:CoverletOutput=\"../coverage/\" -p:ExcludeByAttribute=\"ExcludeFromCodeCoverage\" -p:Include=\"[xFunc.*]*\" -p:Exclude=\"[xFunc.Tests*]*%2c[xFunc.*]*.Resource%2c[xFunc.*]*Exception\" -p:Threshold=90 -p:ThresholdStat=total",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Generate Report",
            "dependsOn": [
                "Code Coverage"
            ],
            "type": "shell",
            "group": "test",
            "options": {
                "cwd": "${workspaceRoot}/xFunc.Tests/"
            },
            "command": "dotnet",
            "args": [
                "reportgenerator",
                "-reports:\"../coverage/coverage.cobertura.xml\"",
                "-targetdir:\"../coverage\"",
                "-reporttypes:HtmlInline_AzurePipelines"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "configurationType",
            "description": "Please, select configuration type from list.",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Debug"
        }
    ]
}