{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/xFunc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/xFunc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/xFunc.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Code Coverage",
            "group": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/xFunc.sln",
                "-c:${input:configurationType}",
                "-p:CollectCoverage=true",
                "-p:CoverletOutputFormat=cobertura",
                "-p:CoverletOutput=\"../coverage/\"",
                "-p:ExcludeByAttribute=\"ExcludeFromCodeCoverage\"",
                "-p:Include=\"[xFunc.*]*\"",
                "-p:Exclude=\"[xFunc.Tests*]*%2c[xFunc.*]*.Resource%2c[xFunc.*]*Exception\"",
                "-p:Threshold=90",
                "-p:ThresholdStat=total"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Generate Report",
            "group": "test",
            "dependsOn": [
                "Code Coverage"
            ],
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceRoot}/xFunc.Tests/"
            },
            "args": [
                "reportgenerator",
                "-reports:\"../coverage/coverage.cobertura.xml\"",
                "-targetdir:\"../coverage\"",
                "-reporttypes:HtmlInline_AzurePipelines"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "configurationType",
            "description": "Please, select configuration type from list.",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Debug"
        }
    ]
}